{
    "trailingComma": "all",
    "printWidth": 100,
    "tabWidth": 2,
    "semi": true,
    "singleQuote": false,
    "quoteProps": "as-needed",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "always",
    "endOfLine": "lf",
    "overrides": [
        {
            "files": [
                "*.hbs",
                "*.handlebars"
            ],
            "options": {
                "parser": "html",
                "printWidth": 120,
                "tabWidth": 2,
                "htmlWhitespaceSensitivity": "css"
            }
        },
        {
            "files": [
                "*.md",
                "*.markdown"
            ],
            "options": {
                "printWidth": 80,
                "proseWrap": "always",
                "tabWidth": 2
            }
        },
        {
            "files": [
                "*.scss"
            ],
            "options": {
                "printWidth": 100,
                "tabWidth": 2,
                "singleQuote": false
            }
        }
    ]
}
